<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Affecto.Logging.Log4Net</AssemblyName>
    <RootNamespace>Affecto.Logging.Log4Net</RootNamespace>
    <PackageReleaseNotes>Migrated to .NET Standard 2.0</PackageReleaseNotes>
    <Company>Affecto</Company>
    <Authors>Affecto</Authors>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <FileVersion>3.0.0.0</FileVersion>
    <Version>3.0.0</Version>
    <Description>Implements the logging interfaces of Affecto.Logging package using Log4Net.</Description>
    <PackageProjectUrl>https://github.com/affecto/dotnet-Logging</PackageProjectUrl>
    <PackageTags>affecto log logging log4net</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Logging\Logging.csproj" />
  </ItemGroup>

</Project>
